<Page x:Class="MultiPageApplication.Pages.UpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiPageApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdatePage">

    <Grid>
        <StackPanel>
            <GroupBox Header="Выберите комплектующее:">
                <ListBox Name="LBKomplect" SelectionMode="Single"></ListBox>
            </GroupBox>
            <GroupBox Header="Выберите поставщика:">
                <ListBox Name="LBPostavshik" SelectionMode="Single"></ListBox>
            </GroupBox>
            <GroupBox Header="Введите количетсво:">
                <TextBox Name="TBKolvo"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите дату закупки">
                <DatePicker Name="DPDate"></DatePicker>
            </GroupBox>
            <Button Click="Button_Click">Записать информацию о закупке</Button>
        </StackPanel>
    </Grid>
</Page>
