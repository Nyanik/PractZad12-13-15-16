<Window x:Class="MultiPageApplication.Pages.UpdateLP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiPageApplication.Pages"
        mc:Ignorable="d"
        Title="UpdateLP" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <GroupBox Header="Логин" >
                <TextBox Name="TBUpdateLogin"></TextBox>
            </GroupBox>
            <GroupBox Header="Новый пароль" >
                <PasswordBox Name="TBUpdatePassN"></PasswordBox>
            </GroupBox>
            <GroupBox Header="Повторите новый пароль" >
                <PasswordBox Name="TBUpdatePassNA"></PasswordBox>
            </GroupBox>
            <Button Name="UpdateInfo" Click="UpdateInfo_Click"  >Обновить данные</Button>
        </StackPanel>
    </Grid>
</Window>
